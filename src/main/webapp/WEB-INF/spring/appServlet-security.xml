<?xml version="1.0" encoding="UTF-8"?>
    <beans:beans xmlns="http://www.springframework.org/schema/security"
                 xmlns:beans="http://www.springframework.org/schema/beans"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <http auto-config="false" use-expressions="true">
        <intercept-url pattern="/resources" access="permitAll()" />
        <intercept-url pattern="/login" access="permitAll()" />
        <intercept-url pattern="/**" access="hasRole('ROLE_USER')" />

        <form-login login-processing-url="/_spring_security_check"
                    login-page="/login"
                    username-parameter="_username"
                    password-parameter="_password"
                    default-target-url="/"
                    authentication-failure-url="/login"/>
        <remember-me key="jbcpPetStore" />
        <logout logout-url="/_spring_security_logout"
                logout-success-url="/" invalidate-session="true" />
    </http>
